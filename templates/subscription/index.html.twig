{% extends 'base.html.twig' %}

{% block title %}Abonnements{% endblock %}

{% block body %}
<div class="container-fluid">
    <h3 class="text-white text-center bg-title marge-form mb-4">Les Abonnements</h3>
</div>
<div class="container">
    <div class="row justify-content-around">
        <div class="card my-5" style="width: 25rem;">
            <img src="{{ asset('upload/subscription/' ~ premium.image)}}" class="card-img-top img-fluid" alt="...">
            <div class="card-body">
                <h5 class="card-title">Abonnement {{ premium.name }}</h5>
                <p class="card-text">{{ premium.description|raw }}</p>
                <p class="text-center font-weight-bold prix">{{ premium.prix }}€/Mois</p>
                <a href="" class="btn btn_hov text-center col-12">Souscrire</a>
            </div>
        </div>
        <div class="card my-5" style="width: 25rem;">
            <img src="{{ asset('upload/subscription/' ~ decouverte.image)}}" class="card-img-top img-fluid" alt="...">
            <div class="card-body">
                <h5 class="card-title">Abonnement {{ decouverte.name }}</h5>
                <p class="card-text">{{ decouverte.description|raw }}</p>
                <p class="text-center font-weight-bold prix">{{ decouverte.prix }}€/Mois</p>
                <a href="#" class="btn btn_hov text-center col-12">Souscrire</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}