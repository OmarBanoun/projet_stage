{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container-fluid cover titre-deal">
    <div class="container py-5">
        <h1 class="text-center text-danger">P&P</h1>
        <p class="text-center">Rejoignez-nous si vous êtes un particulier pour organiser vos évènments où si vous êtes un professionel de l'évènementiel !</p>
    </div>
</div>
<div class="container bg-white shadow py-2 my-4">
    <h3 class="mt-3 text-center">Inscrivez-vous :</h3>
    <div class="divider mb-4"></div>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.name, 'Nom') }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.firstname, 'Prénom') }}
        {{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Votre prénom'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.login) }}
        {{ form_widget(form.login, {'attr': {'class': 'form-control', 'placeholder': 'Votre login'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.password) }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Votre mot de passe'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.number) }}
        {{ form_widget(form.number, {'attr': {'class': 'form-control', 'placeholder': 'Votre numéro de rue'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.numberComplement) }}
        {{ form_widget(form.numberComplement, {'attr': {'class': 'form-control', 'placeholder': 'Votre numéro complément (facultatif)'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.street, 'Rue') }}
        {{ form_widget(form.street, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom de rue'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.city, 'Ville') }}
        {{ form_widget(form.city, {'attr': {'class': 'form-control', 'placeholder': 'Votre ville'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.country, 'Pays') }}
        {{ form_widget(form.country, {'attr': {'class': 'form-control', 'placeholder': 'Votre pays'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.postalCode, 'Code postal') }}
        {{ form_widget(form.postalCode, {'attr': {'class': 'form-control', 'placeholder': 'Votre code postal'} }) }}
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn_hov mt-3">S'inscrire</button>
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, { render_rest: false }) }}
</div>
{% endblock %}
