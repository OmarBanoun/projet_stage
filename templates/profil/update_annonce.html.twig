{% extends 'base.html.twig' %}

{% block title %}Modifier annonce{% endblock %}

{% block body %}
<div class="container-fluid">
    <h3 class="text-white text-center bg-title marge-form mb-5">Modification de l'annonce :</h3>
</div>
    <div class="container bg shadow mb-4 p-3">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.category, 'Cat√©gorie') }}
            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.title, 'Titre') }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Votre titre'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.description|raw, 'Description') }}
            {{ form_widget(form.description|raw, {'attr': {'class': 'form-control', 'placeholder': 'Votre description',
            'rows': '5'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.imageFile, 'Image') }}
            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="text-right">
            <button type="submit" class="btn btn_form mt-3">Ajouter</button>
        </div>
        {{ form_row(form._token) }}
        {{ form_end(form, { render_rest: false }) }}
    </div>
</div>
{% endblock %}