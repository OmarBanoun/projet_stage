{% extends 'base.html.twig' %}

{% block title %}Nouvelle annonce{% endblock %}

{% block body %}
<div class="container bg-white shadow py-2 my-4">
    <h3 class="mt-3 text-center">Nouvelle annonce :</h3>
    <div class="divider mb-4"></div>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.category, 'Cat√©gorie') }}
        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.title, 'Titre') }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Votre titre'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.description, 'Description') }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Votre description', 'rows': '5'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.imageFile, 'Image') }}
        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'} })}}
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn_hov mt-3">Ajouter</button>
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, { render_rest: false }) }}
</div>
{% endblock %}
